<div class="container">
  <div class="card p-3 m-3">
    <h1>Offers List</h1>
    <%= form_tag offers_path, method: :get do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Find a pedreiro"
    %>
  <% end %>
  </div>
  <div>
  <% @offers.each do |offer|%>
  <div class="card p-3 m-3">
    <h3> <%= link_to offer.title, offer_path(offer) %></h3>
    <p>Description: <%= offer.description %></p>
    <p>Offer owner: <%= offer.user.name %></p>
  </div>
  <% end %>
  </div>


</div>

