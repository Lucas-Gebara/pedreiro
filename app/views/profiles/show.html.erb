<!-- <h1 class="text-center">PROFILE</h1> -->

 <div class="card">

   <h3><%= @user.name.capitalize %></h3>

   <%= cl_image_tag @user.avatar, height: 100, width: 100, crop: :thumb %>
   <p><%=@user.portfolio.description%></p>

   <%= link_to 'Portfolio', portfolio_path,  :class => "btn btn-warning m-3"%>

 </div>


 <div class="container">
   <div class="card p-3 m-3">
     <h2>MY OFFERS</h2>
     <ul>
       <% current_user.offers.each do |offer| %>
       <li><%= offer.title %></li>
       <p><%= link_to "Delete offer", offer_path(offer),
       method: :delete,
       data: { confirm: "Are you sure?" } %></p>
       <% end %>
     </ul>
   </div>

   <%= link_to 'Create a new Offer', new_offer_path, :class => "btn btn-warning m-3"%>

   <div class="card p-3 m-3">
     <h2>MY BOOKINGS</h2>
     <% current_user.bookings.each do |booking| %>
       <div>
         <h3><%= booking.offer.title %></h3>
         <p>Service provider - <%= booking.offer.user.name %></p>
         <p> Start time - <%= booking.start_time %></p>
         <p> End time - <%= booking.end_time %>
         <p><%= link_to "Cancel booking", booking_path(booking),
           method: :delete,
           data: { confirm: "Are you sure?" } %></p>
         </p>
       </div>
     <% end %>
   </div>

   <%= link_to 'Go back to offers list', offers_path, :class => "btn btn-warning m-3"%>

 </div>








