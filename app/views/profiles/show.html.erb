<!-- <h1 class="text-center">PROFILE</h1> -->

  <div class="container">

    <div class="card p-3 m-3">
      <div class="m-3">
        <h3><%= @user.name %></h3>
      </div>
      <%= cl_image_tag current_user.avatar_url, :width=>250, :height=>250 %>
      <%= link_to 'Edit profile', edit_user_registration_path %>
    </div>





    <div class="card m-3 p-3">
      <% if current_user.profilepicture != nil %>
        <%= cl_image_tag @user.portfolio.photo %>
        <p><%=@user.portfolio.description%></p>
      <% end %>
      <%= link_to 'Portfolio', portfolio_path,  :class => "btn btn-warning m-3"%>
    </div>

    <div class="d-flex">
      <div class="card p-3 m-3">
        <h2>MY OFFERS</h2>
        <ul>
          <% current_user.offers.each do |offer| %>
          <li><%= offer.title %></li>
          <% end %>
        </ul>
      <%= link_to 'Create a new Offer', new_offer_path, :class => "btn btn-warning m-3"%>
      </div>


      <div class="card p-3 m-3">
        <h2>MY BOOKINGS</h2>
        <% current_user.bookings.each do |booking| %>
          <div>
            <h3><%= booking.offer.title %></h3>
            <p>Service provider - <%= booking.offer.user.name %></p>
            <p> Start time - <%= booking.start_time.to_formatted_s(:long) %></p>
            <p> End time - <%= booking.end_time %></p>
          </div>
        <% end %>
      <%= link_to 'Go back to offers list', offers_path, :class => "btn btn-warning m-3"%>
      </div>

    </div>


  </div>







